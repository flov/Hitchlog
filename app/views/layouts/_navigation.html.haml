.navbar.navbar-inverse
  .navbar-inner
    .container
      = link_to "#{image_tag("hitchlog_icon.png")} Hitchlog".html_safe, '', class: 'brand'
      %a{ class: "btn btn-navbar", 'data-toggle'=>"collapse", "data-target" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav
          %li= link_to '<i class="icon-home"></i>'.html_safe, root_path
          %li= link_to "<i class='icon-road'></i> #{t('.trips')}".html_safe, trips_path
          %li= link_to "<i class='icon-group'></i> #{t('.hitchhikers')}".html_safe, users_path
          %li= link_to t('.about'), about_path

          %li.dropdown
            %a.dropdown-toggle{href: "#", "data-toggle"=>"dropdown"}
              = t('.navigation.language')
              %b.caret
            %ul.dropdown-menu
              - [ :en, :fr, :pt, :de ].each do |locale|
                %li
                  = link_to url_for(:locale => locale) do
                    = image_tag "flags/png/#{locale}.png"
                    != "<i class='icon-hand-left'></i>" if I18n.locale == locale

        - if user_signed_in?
          .pull-right.logged_in
            - if fb_user = current_user.authentications.where(provider: 'facebook').first
              = image_tag "https://graph.facebook.com/#{fb_user.uid}/picture?type=small", class: 'profile_pic'
            - else
              = gravatar_image_tag current_user.email, gravatar: { :size => 25 }, class: 'profile_pic'

            .btn-group
              = link_to user_path(current_user), class: 'btn' do
                %i.icon-user
                = t('.your_profile')
              %a.btn.dropdown-toggle{'data-toggle' => 'dropdown'}
                %span.icon-caret-down
              %ul.dropdown-menu
                %li
                  = link_to edit_user_path(current_user) do
                    %i.icon-pencil
                    = t('.edit_profile')
                %li
                  = link_to new_trip_path do
                    %i.icon-book
                    = t('.log_new_trip')
                %li
                  = link_to future_trips_path do
                    %i.icon-eye-open
                    = t('.find_hitchhiking_buddy')
                %li
                  = link_to destroy_user_session_path do
                    %i.icon-ban-circle
                    = t('.sign_out')

        - else
          .pull-right.logged_out
            = link_to new_user_session_path do
              %i.icon-user
              login
