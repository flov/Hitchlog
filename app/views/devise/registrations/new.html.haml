- title t('.sign_up')

%h1.text_center= t('.create_a_hitchlog_account')

%table#sign_up
  %tr
    %td
      = facebook_authentication

    %td
      =t('general.or')
    %td
      %h2= t('.use_the_normal_form')
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'fancy_form'}) do |f|
        = devise_error_messages!
        .text_field.username
          = f.label :username
          %br
          = f.text_field :username, autofocus: true, required: true
        .text_field.email
          = f.label :email
          %br
          = f.text_field :email, required: true
        .text_field.password
          = f.label :password
          %br
          = f.password_field :password, required: true
        .text_field.email
          = f.label :password_confirmation
          %br
          = f.password_field :password_confirmation, required: true
        .text_field.gender
          = f.label :gender
          %br
          = f.select :gender, [t('activerecord.models.male'), t('activerecord.models.female')]
        %p= f.submit "Sign up"

.help
  <b>Help:</b>
  If you lost your password, you can
  =link_to 'retrieve your password', new_password_path(resource_name)

