- title t('.sign_in')


%table#sign_in
  %tr
    %td
      = facebook_login
    %td
      =t('general.or')
    %td
      %h2= t('.login_using_normal_font') 
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'fancy_form'}) do |f|
        .text_field
          = f.label :username
          = f.text_field :username, autofocus: 'true', required: true
        .text_field
          = f.label :password, required: true
          = f.password_field :password
        - if devise_mapping.rememberable?
          %p
            = f.check_box :remember_me
            = f.label :remember_me
        %p= f.submit t('.sign_in')
