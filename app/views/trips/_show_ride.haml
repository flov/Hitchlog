%h1
  #{number_to_ordinal(ride.number)} Ride 
  = "- #{ride.title}" if ride.title
  = link_to '(Add/Edit Information)', edit_ride_path(ride) if ride.trip.user == current_user
  - ride.trip.countries_with_distance.each do |hash|
    = country_images(hash)
%p
  = images_for_ride(ride)
  - if ride.trip.user == current_user
    = link_to images_missing_for_ride(ride), edit_ride_path(ride)
    = link_to add_information_image, edit_ride_path(ride)
%p
  = ride.story
