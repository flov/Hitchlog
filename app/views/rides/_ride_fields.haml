= render :partial => 'shared/error_explanation', :locals => {:model => ride}
%p.input_fields
  = f.label :title
  %br/
  = f.text_field :title
%p.input_fields
  = f.label :story
  %br/
  = f.text_area :story, :rows => 4
%p.input_fields
  = f.label :waiting_time, 'Waiting time (in minutes)'
  %br/
  = f.text_field :waiting_time
%p.input_fields
  ="You said that the trip lasted <b>#{trip.duration}</b>  hours.".html_safe
  %br/ 
  ="Please specify here how long this specific ride took."
  %br/
  = f.label :duration, 'Duration of ride (in hours) e.g. 2.5 for 2 hours 30 minutes'
  %br/
  = f.text_field :duration
%h4 Person who picked you up:
= f.fields_for :person do |builder|
  -#%p
    -#= builder.label :name
    -#%br/
    -#= builder.text_field :name
  %p.input_fields
    = builder.label :gender
    %br/
    = builder.select("gender", %w[male female])
  %p.input_fields
    = builder.label :mission
    %br/
    = builder.text_field :mission
  %p.input_fields
    = builder.label :origin
    %br/
    = builder.text_field :origin
  %p.input_fields
    = builder.label :occupation
    %br/
    = builder.text_field :occupation
  %p.input_fields
    = builder.label :age
    %br/
    = builder.text_field :age
  - if ride.photo.file?
    %p
      = image_tag(ride.photo(:thumb)) 
      = link_to 'Delete Photo', delete_photo_ride_path(ride), :method => :delete, :confirm => 'Are you sure?'
%p
  = f.label :photo
  %br/
  = f.file_field :photo
%p= f.submit "Submit"

:javascript
  $('#hitchhike_story').autoGrow()
